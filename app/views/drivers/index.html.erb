<h1 align="center">Drivers</h1>

<div class="container">

<% @drivers.each do | driver | %>
  <div class="col-lg-4">
    <div class="well">
      <h6>Driver ID: <%= driver.id %></h6>
      <h5><%= driver.name %></h5>
      <h6><a href="/drivers/<%= driver.id %>">More details</a></h6>

    </div>
</div>
<% end %>
</div>

                                     
                               

<br><div class="section-title section-title--style-1 text-xs-center">
        <h3 class="section-title-inner heading-4 strong-600">Proof of Delivery Board</h3>
        <span class="section-title-delimiter clearfix"></span>
    </div>



  <div class="mt-2 py-2 b-xs-top">
    <div class="row">
      <% @pods.each do | pod | %>
        <div class="col-md-4">
