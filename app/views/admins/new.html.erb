    <section class="slice sct-color-2 v-align-middle">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                    <div class="form-card form-card--style-2 mb-1 z-depth-1-bottom">
                        <div class="form-header text-xs-center">
                            <div class="form-header-icon">
                                <i class="icon icon-3x ion-ios-personadd-outline"></i>
                            </div>
                        </div>
                        <div class="form-body">
                            <div class="row">
                                <div class="col-xs-offset-1 col-xs-10">
                                    <div class="text-xs-center">
                                        <h4 class="heading heading-5 mb-0">Create Admin Account</h4>
                                        </div>
                                </div>
                            </div>

                            <!-- <form class="form-default mt-1" data-toggle="validator" role="form"> -->
                            <%= form_tag "/admins", method: :post do %>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group has-feedback">
                                            <label class="control-label" for="inputName">Name</label>
                                            <input type="name" name="name" class="form-control input-lg" id="inputName" placeholder="" required>
                                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group has-feedback">
                                            <label class="control-label" for="inputEmail">Email</label>
                                            <input type="email" name="email" class="form-control input-lg" id="inputEmail" placeholder="" required>
                                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group has-feedback">
                                            <label class="control-label" for="inputPassword">Password</label>
                                            <input type="password" name="password" class="form-control input-lg" id="inputPassword" placeholder="" required>
                                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group has-feedback">
                                            <label class="control-label" for="inputConfirmPassword">Confirm Password</label>
                                            <input type="password" name="password_confirmation" class="form-control input-lg" id="inputConfirmPassword" placeholder="" required>
                                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-lg btn-block btn-base-1 mt-20">Register</button>
                                <div class="mt-5 text-xs-center">
                                </div>

                            <!-- </form> -->
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

