<div class="body-wrap">
    <section class="slice sct-color-2">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                    <div class="form-card form-card--style-2 mb-1 z-depth-1-bottom">
                        <div class="form-header text-xs-center">
                            <div class="form-header-icon">
                                <i class="icon ion-log-in"></i>
                            </div>
                        </div>
                        <div class="form-body">
                        <%= form_tag "/drivers_login", method: :post do %>
                            <div class="row">
                                <div class="col-xs-offset-1 col-xs-10">
                                    <div class="text-xs-center">
                                        <h4>Driver Sign in</h4>
                                    </div>
                                </div>
                            </div>

                            <form class="form-default" data-toggle="validator" role="form">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group has-feedback">
                                            <label class="control-label" for="inputEmail">Email</label>
                                            <input type="email" name="email" class="form-control input-lg" id="inputEmail" placeholder="" required>
                                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group has-feedback">
                                            <label class="control-label" for="inputPassword">Password</label>
                                            <input type="password" name="password" class="form-control input-lg" id="inputPassword" placeholder="" required>
                                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="checkbox">
                                            <input type="checkbox" id="chkRemember">
                                            <label for="chkRemember">Remember me</label>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-lg btn-block btn-base-1 mt-20">Sign in</button>
                            </form>
                        </div>
                    </div>
                    <% end %>

                    <!-- Form auxiliary links -->
                    <div class="form-user-footer-links">
                        <div class="row">
            
                            <div class="col-xs-6 text-xs-right">
                                <a href="sign-up-1.html" class="">Create a new account</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

