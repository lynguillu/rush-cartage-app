<h1>Client Info</h1>

<h3><b>Client: <%= @client.name %></h3>
<h3><b>Email: <%= @client.email %></h3>
<h3><b>Address: <%= @client.address %></h3>
<h3><b>Phone Number: <%= @client.phone %></h3>
<h3><b>Ext: <%= @client.ext %></h3>


<div class="content table-responsive table-full-width">

<table class="table table-striped" style="margin-left: 10%; width: 80%;">
  <thead>
    <th>Load</th>
    <th>Origin</th>
    <th>Destination</th>
    <th>Delivery Date/Time</th>
    <th>Driver</th>
    <th>PDF</th>
  </thead>
  <tbody>
    <% @client.pods.each do |pod| %>
      <tr>
        <td><%= pod.load %></td>
        <td><%= pod.pickup_address %></td>
        <td><%= pod.dropoff_address %></td>
        <td><%= pod.delivery_date %></td>
        <td><%= pod.driver.name %></td>
        <td><a href="">Download PDF</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>