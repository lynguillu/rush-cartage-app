<div class="section-title section-title--style-1 text-xs-center">
    <h2 class="section-title-inner heading-4 strong-600">Client Dashboard</h2>
    <span class="section-title-delimiter clearfix"></span>
</div>



<section class="slice sct-color-2">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="block-card-wrapper">
                    <div class="block-card-section z-depth-1-bottom">
                        <div class="block-card-section-inner">
                            <div class="text-xs-center">
                            </div>                                  
                        </div>

                        <span class="clearfix"></span>

                        <div class="block block-post">
                            <div class="block-image mt-1">
                            </div>
                        </div>
                        <br>
                        <div class="section-title section-title--style-1 text-xs-center">
                            <h3 class="section-title-inner heading-4 strong-600">Shipment Document Request</h3>
                            <span class="section-title-delimiter clearfix"></span>
                        </div>

                        <div class="section-title section-title--style-1 text-xs-center">
                            <h6>Quickly request a Bill of Lading.<br>All you need is a load number and destination ZIP for convenient document delivery right at your fingertips.</h6>
                        </div>

                        <!-- POD table -->

                        <div class="content table-responsive table-full-width">
                          <table class="table table-striped" style="margin-left: 2%;
                            width: 130%;">
                            <thead>
                                <th>Load</th>
                                <th>Client</th>
                                <th>Origin</th>
                                <th>Destination</th>
                                <th>Delivery Date/Time</th>
                                <th>Driver</th>
                                <th>View POD</th>
                            </thead>
                            <tbody>
                            <% @pods.each do | pod | %>
                                <tr>
                                    <td><%= pod.load%></td>
                                    <td><%= pod.client.name%></td>
                                    <td><%= pod.pickup_address%></td>
                                    <td><%= pod.dropoff_address%></td>
                                    <td><%= pod.delivery_date%></td>
                                    <td><%= pod.driver.name%></td>
                                    <td><a href="<%= pod.asset.url %>" class="theater"><img src="http://www.funai.gov.br/arquivos/conteudo/cggeo/img/PDF_downlaod.png" alt="" width=25<%= pod.asset_file_name%>/></a></td>
                                </tr>
                                <% end %>
                            </tbody>
                          </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

